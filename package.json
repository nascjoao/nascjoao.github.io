    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.1.1",
    "eslint": "^9",
    "eslint-config-next": "15.2.5",
    "glob": "^11.0.1",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.5.0",
    "next-router-mock": "^0.9.13",
    "prettier": "^3.5.3",
    "steiger": "^0.5.6",
    "tailwindcss": "^4",
    "tsx": "^4.19.3",
    "typescript": "^5",
